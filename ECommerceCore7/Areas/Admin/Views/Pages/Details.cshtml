@model ECommerceCore7.Models.Entities.Page

@{
    ViewData["Title"] = $"{ViewData["Title"]} {ViewData["ControllerSingularTitle"]}";
}
<h1><i class='@ViewData["Icon"]'></i> @ViewData["Title"]</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PageTitle)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PageTitle)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PageShortContent)
        </dt>
        <dd class="col-sm-10">
            @Html.Raw(Model.PageShortContent)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PageLongContent)
        </dt>
        <dd class="col-sm-10">
            @Html.Raw(Model.PageLongContent)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PageEnabled)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PageEnabled)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PageRoute)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PageRoute)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PageGroup)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PageGroup.PageGroupTitle)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.PageID" class="btn btn-primary">ویرایش</a>
    <a asp-action="Index" class="btn btn-secondary">بازگشت به فهرست</a>
</div>
