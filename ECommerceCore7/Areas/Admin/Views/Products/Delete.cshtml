@model ECommerceCore7.Models.Entities.Product

@{
    ViewData["Title"] = $"{ViewData["Title"]} {ViewData["ControllerSingularTitle"]}";
}
<h1><i class='@ViewData["Icon"]'></i> @ViewData["Title"]</h1>

<h3>آیا از حذف این @ViewData["ControllerSingularTitle"] مطمئن هستید؟</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProductIsActive)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductIsActive)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductTitle)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductTitle)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductShortDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductShortDescription)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductLongDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductLongDescription)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductPrice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductPrice)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductGroup)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductGroup.ProductGroupTitle)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ProductID" />
    <button type="submit" class="btn btn-danger">حذف</button>
        <a asp-action="Index" class="btn btn-secondary">بازگشت به فهرست</a>
    </form>
</div>
